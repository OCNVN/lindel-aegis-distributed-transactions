<?xml version="1.0" encoding="UTF-8"?>
<application>
    
    <distributed-transaction id="post-ejemplo" master-replicas="3">
        <workers-schedule>
            <worker-schedule 
                name="almacenar-postgres" 
                schedule-order="0" 
                parallelism="8" 
                id-offset="0"
                external="false"
                implementation-class-name="com.lindelit.xatransactions.test.AlmacenarPostgres"/>
            <worker-schedule 
                name="almacenar-redis" 
                schedule-order="1" 
                parallelism="8" 
                id-offset="0"
                external="false"
                implementation-class-name="com.lindelit.xatransactions.test.AlmacenarRedis"/>
            <worker-schedule 
                name="worker-nodejs" 
                schedule-order="2"
                parallelism="8" 
                id-offset="0"
                external="true"
                implementation-class-name=""/>
            <worker-schedule 
                name="almacenar-elaticsearch" 
                schedule-order="3" 
                parallelism="8" 
                id-offset="0"
                external="false"
                implementation-class-name="com.lindelit.xatransactions.test.AlmacenarElasticsearch"/>
        </workers-schedule>
    </distributed-transaction>
    
    <distributed-transaction id="logeo" master-replicas="3">
        <workers-schedule>
            <worker-schedule 
                name="logeo-postgres" 
                schedule-order="0" 
                parallelism="8" 
                id-offset="0"
                external="false"
                implementation-class-name="com.lindelit.xatransactions.test.LogeoPostgres"/>
            <worker-schedule 
                name="actualizar-mongodb" 
                schedule-order="1" 
                parallelism="8" 
                id-offset="0"
                external="false"
                implementation-class-name="com.lindelit.xatransactions.test.ActualizarMongodb"/>
            <worker-schedule 
                name="sesion-redis" 
                schedule-order="2" 
                parallelism="8" 
                id-offset="0"
                external="false"
                implementation-class-name="com.lindelit.xatransactions.test.SesionRedis"/>
            <!--<worker-schedule 
                name="worker-nodejs" 
                schedule-order="3"
                parallelism="8" 
                id-offset="0"
                external="true"
                implementation-class-name=""/>-->
        </workers-schedule>
    </distributed-transaction>
    
</application>